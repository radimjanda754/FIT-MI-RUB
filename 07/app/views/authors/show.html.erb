<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @author.username %>
</p>

<p>
  <strong>Firstname:</strong>
  <%= @author.firstname %>
</p>

<p>
  <strong>Surname:</strong>
  <%= @author.surname %>
</p>

<p>
  <strong>Theses:</strong>
  <%
    @books = Thesis.where(author_id: @author.id)
    @books.each do |book|%>
    <p>
      <%= ' - '+book.title%>
    </p>
  <% end %>
</p>


<%= link_to 'Edit', edit_author_path(@author) %> |
